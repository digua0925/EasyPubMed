{
    "name": "EasyPubMed",
    "manifest_version": 2,
    "version": "0.0.4",
    "description": "Show Imapct Factor(IF), JCR quartile, CAS block on PubMed, full-text download and article information in Bibtex",
    "short_name": "EP",
    "icons": {
        "16": "images/ep_16.png",
        "48": "images/ep_48.png",
        "128": "images/ep_128.png"
    },
    "browser_action": {
        "default_icon": "images/ep_128.png",
        "default_title": "EasyPubMed",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "script/jquery.js",
            "script/background.js"
        ]
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "content_scripts": [
        {
            "js": [
                "script/jquery.js",
                "script/main.js"
            ],
            "css": [
                "css/style.css"
            ],
            "matches": ["*://pubmed.ncbi.nlm.nih.gov/*"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources":[
        "images/*.png",
        "data/ifqbt_2020.json",
        "css/style.css"
    ],
    "permissions": [
        "storage",
  "https://sci-hub.tw/", "https://sci-hub.st/", "https://sci-hub.se/", "https://sci-hub.ee/", "https://sci-hub.ren/"
    ]
}